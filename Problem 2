#include <iostream>
#include <conio.h>
#include <algorithm>

using namespace std;

int main()
{
int n, arr[100], x, y, z;

cout << "Enter size of array: "; cin >> n;
cout << "Enter the " << n << " elements:\n"; 

for (x=0; x<n; x++)
{
cin >> arr[x];
}
	
cout << "Your data: ";

for (x=0; x<n; x++)
{
cout << arr[x] << " ";
}

sort (arr, arr+n);

cout << "\nAfter using selection sort...\n\n" << "Sorted data: ";
for (x=0; x<n; x++)
{
	cout << arr[x] << " ";
}


_getch();
return 0;
}
